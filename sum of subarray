public class Main {
	
void checkSum(int arr[],int n) {
	int sum1=0;
	for(int i=0;i<arr.length;i++) {
		sum1=arr[i];
		for(int j=i+1;j<arr.length;j++) {
			sum1+=arr[j];
		
			if(sum1==n) {
				System.out.println("first index " +i+ "last index " +j);
			}
			
		}
	}
}
public static void main(String args[]) {
	Main s=new Main();
	int arr[]= {2,3,6,4,5};
	System.out.println("sum of subarra:");
	int n=20;
	s.checkSum(arr,n);
}
}
